{
	"name": "RISE",
	"description": "Exercise Alarm, especially for those work in front of laptops 24/7",
	"version": "1.0",
	"manifest_version": 2,

	"permissions": ["alarms", "notifications", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"browser_action": {
		"default_title": "Exercise Event",	// shows when the cursor is moved onto the icon
		"default_popup": "popup.html"	// a small screen that shows up under the icon after you click on it
	},

	"icons": {
		"16": "stretching16.png",
		"32": "stretching32.png",
		"48": "stretching48.png",
		"128": "stretching128.png"
	}
}
